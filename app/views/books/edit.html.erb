<%= form_with model: @book, url: update_book_path(@book.id), method: :patch, local:true do |f| %>

<div class="field">Title</div>
<%= f.text_field :title %>
<div class="field">Body</div>
<%= f.text_area :body %>

<div><%= f.submit 'Update Book' %></div>

<div><%= link_to "show", book_path(@book.id) %>
<%= link_to "back", books_path %></div>

<% end %>
